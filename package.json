{
    "name": "2bo-dev-blog",
    "version": "1.0.0",
    "description": "Developer blog for 2bo brand",
    "scripts": {
        "start": "hugo server -D",
        "build": "npm run build:css && hugo --gc --minify",
        "build:css": "npx tailwindcss -i ./static/css/input.css -o ./static/css/main.css --minify",
        "watch:css": "npx tailwindcss -i ./static/css/input.css -o ./static/css/main.css --watch",
        "dev": "npm run watch:css & hugo server -D"
    },
    "devDependencies": {
        "tailwindcss": "^3.4.0",
        "@tailwindcss/typography": "^0.5.10",
        "@tailwindcss/forms": "^0.5.7"
    }
}