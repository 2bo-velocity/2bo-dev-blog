{
    "name": "2bo-dev-blog",
    "version": "1.0.0",
    "description": "Developer blog for 2bo brand",
    "scripts": {
        "start": "hugo server -D",
        "build": "hugo --gc --minify",
        "build:css": "npx tailwindcss -i ./static/css/styles.css -o ./static/css/output.css --minify",
        "watch:css": "npx tailwindcss -i ./static/css/styles.css -o ./static/css/output.css --watch"
    },
    "devDependencies": {
        "tailwindcss": "^3.0.0",
        "@tailwindcss/typography": "^0.5.0"
    }
}